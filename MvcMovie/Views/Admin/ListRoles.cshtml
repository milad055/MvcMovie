@using Microsoft.AspNetCore.Identity

@model IEnumerable<IdentityRole>

    @{
    ViewBag.title = "All Roles";
}


    <h1> All Roles </h1>

    @if (Model.Any())
    {
         <a class="btn btn-primary mb-3" style="width:auto"
                    asp-controller="admin" asp-action="CreateRole">
                    Add new role
                  </a>

        foreach (var role in Model)
    {
         <div class="card mb-3">
            <div class="card-header">
             Role Id :@role.Id
            </div>
            <div class="card-body">
              <h5 class="card-title"> @role.Name   </h5>
                <a  class="btn btn-primary" asp-route-id="@role.Id" asp-action="EditRole" asp-controller="admin"> Edit  </a>
                <a href=# class="btn btn-danger"> Delete  </a>
            </div>
        </div>
    }

    }

    else
    {
        <div class="card">
            <div class="card-header">
                No roles created yet
            </div>
            <div class="card-body">
                <h5 class="card-title">
                Use button bellow to create
                </h5>
                <a class="btn btn-primary" style="width:auto"
                    asp-controller="admin" asp-action="CreateRole">
                    Create role
                  </a>
            </div>


        </div>
    }